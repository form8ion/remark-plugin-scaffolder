{
  "name": "@form8ion/remark-plugin-scaffolder",
  "description": "opinionated scaffolder for remark plugins",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "engines": {
    "node": "^18.19.0 || ^20.9.0 || >=22.11.0"
  },
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "form8ion/remark-plugin-scaffolder",
  "bugs": "https://github.com/form8ion/remark-plugin-scaffolder/issues",
  "homepage": "https://npm.im/@form8ion/remark-plugin-scaffolder",
  "runkitExampleFilename": "./example.js",
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
  "sideEffects": false,
  "scripts": {
    "pretest": "run-s build",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint",
    "lint:js": "eslint . --cache",
    "lint:gherkin": "gherkin-lint",
    "lint:md": "remark . --frail",
    "lint:sensitive": "ban",
    "lint:peer": "npm ls >/dev/null",
    "lint:publish": "publint --strict",
    "generate:md": "remark . --output",
    "pregenerate:md": "npm run build",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any vitest run",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "pretest:integration:base": "npm run build:js",
    "test:integration:base": "cucumber-js test/integration",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "prepare": "husky install",
    "lint:engines": "ls-engines",
    "lint:js:fix": "run-s 'lint:js -- --fix'"
  },
  "files": [
    "example.js",
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "npm@11.6.2+sha512.ee22b335fcbc95662cdf3ab8a053daf045d9cf9c6df6040d28965abb707512b2c16fa6c5eec049d34c74f78f390cebd14f697919eadb97756564d4f9eccc4954",
  "dependencies": {
    "@form8ion/cucumber-scaffolder": "^5.0.0-beta.2",
    "camelcase": "^8.0.0",
    "deepmerge": "^4.2.2",
    "mustache": "^4.0.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "11.3.0",
    "@form8ion/commitlint-config": "2.0.8",
    "@form8ion/eslint-config": "7.0.13",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/javascript": "14.5.0",
    "@form8ion/remark-lint-preset": "6.0.7",
    "@travi/any": "3.1.3",
    "ban-sensitive-files": "1.10.11",
    "c8": "10.1.3",
    "cross-env": "10.1.0",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.4",
    "husky": "9.1.7",
    "jest-when": "3.7.0",
    "lockfile-lint": "4.14.1",
    "ls-engines": "0.9.3",
    "mock-fs": "5.5.0",
    "npm-run-all2": "8.0.4",
    "publint": "0.3.15",
    "remark-cli": "12.0.1",
    "remark-toc": "9.0.0",
    "remark-usage": "11.0.1",
    "rimraf": "6.1.0",
    "rollup": "4.53.2",
    "rollup-plugin-auto-external": "2.0.0",
    "vitest": "4.0.8"
  },
  "peerDependencies": {
    "@form8ion/javascript": ">=2.0.0"
  }
}
