{
  "name": "@form8ion/remark-plugin-scaffolder",
  "description": "opinionated scaffolder for remark plugins",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "form8ion/remark-plugin-scaffolder",
  "bugs": "https://github.com/form8ion/remark-plugin-scaffolder/issues",
  "homepage": "https://npm.im/@form8ion/remark-plugin-scaffolder",
  "runkitExampleFilename": "./example.js",
  "main": "./lib/index.js",
  "exports": "./lib/index.js",
  "sideEffects": false,
  "scripts": {
    "pretest": "run-s build",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "lint:gherkin": "gherkin-lint",
    "lint:md": "remark . --frail",
    "lint:sensitive": "ban",
    "lint:peer": "npm ls >/dev/null",
    "lint:publish": "publint",
    "generate:md": "remark . --output",
    "pregenerate:md": "npm run build",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any vitest run",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "pretest:integration:base": "npm run build:js",
    "test:integration:base": "cucumber-js test/integration",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "prepare": "husky install"
  },
  "files": [
    "example.js",
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@form8ion/cucumber-scaffolder": "^4.0.0",
    "camelcase": "^8.0.0",
    "deepmerge": "^4.2.2",
    "make-dir": "^4.0.0",
    "mustache": "^4.0.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "11.0.1",
    "@form8ion/commitlint-config": "1.0.76",
    "@form8ion/eslint-config": "7.0.11",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/javascript": "12.6.2",
    "@form8ion/remark-lint-preset": "6.0.4",
    "@travi/any": "3.1.2",
    "ban-sensitive-files": "1.10.6",
    "c8": "10.1.2",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.4",
    "husky": "9.1.6",
    "jest-when": "3.6.0",
    "lockfile-lint": "4.14.0",
    "mock-fs": "5.2.0",
    "npm-run-all2": "6.2.3",
    "publint": "0.2.11",
    "remark-cli": "12.0.1",
    "remark-toc": "9.0.0",
    "remark-usage": "11.0.1",
    "rimraf": "6.0.1",
    "rollup": "4.22.0",
    "rollup-plugin-auto-external": "2.0.0",
    "vitest": "2.1.1"
  },
  "peerDependencies": {
    "@form8ion/javascript": ">=2.0.0"
  }
}
