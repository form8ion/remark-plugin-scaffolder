{
  "name": "@form8ion/remark-plugin-scaffolder",
  "description": "opinionated scaffolder for remark plugins",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "files": [
    "example.js",
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "runkitExampleFilename": "./example.js",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "sideEffects": false,
  "repository": "form8ion/remark-plugin-scaffolder",
  "bugs": "https://github.com/form8ion/remark-plugin-scaffolder/issues",
  "homepage": "https://npm.im/@form8ion/remark-plugin-scaffolder",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "test": "npm-run-all --print-label build --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "lint:gherkin": "gherkin-lint",
    "lint:md": "remark . --frail",
    "lint:sensitive": "ban",
    "lint:travis": "travis-lint .travis.yml",
    "lint:peer": "npm ls >/dev/null",
    "generate:md": "remark . --output",
    "pregenerate:md": "npm run build",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "nyc run-s test:unit:base",
    "test:unit:base": "DEBUG=any mocha 'src/**/*-test.js'",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "pretest:integration:base": "npm run build:js",
    "test:integration:base": "cucumber-js test/integration --profile base",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "devDependencies": {
    "@babel/register": "7.10.1",
    "@form8ion/babel-preset": "1.6.24",
    "@form8ion/commitlint-config": "1.0.9",
    "@form8ion/eslint-config": "1.6.17",
    "@form8ion/eslint-config-cucumber": "1.4.0",
    "@form8ion/eslint-config-mocha": "1.2.8",
    "@form8ion/remark-lint-preset": "1.0.6",
    "@travi/any": "2.0.9",
    "@travi/javascript-scaffolder": "10.22.4",
    "ban-sensitive-files": "1.9.7",
    "chai": "4.2.0",
    "codecov": "3.7.0",
    "cucumber": "6.0.5",
    "cz-conventional-changelog": "3.2.0",
    "gherkin-lint": "4.0.1",
    "husky": "4.2.5",
    "lockfile-lint": "4.3.6",
    "mocha": "7.2.0",
    "mock-fs": "4.12.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "remark-cli": "8.0.0",
    "remark-toc": "7.0.0",
    "remark-usage": "8.0.0",
    "rimraf": "3.0.2",
    "rollup": "2.14.0",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "9.0.2",
    "travis-lint": "1.0.0"
  },
  "dependencies": {
    "@form8ion/cucumber-scaffolder": "^1.1.0",
    "camelcase": "^6.0.0",
    "deepmerge": "^4.2.2",
    "make-dir": "^3.0.2",
    "mustache": "^4.0.1"
  },
  "peerDependencies": {
    "@travi/javascript-scaffolder": "^10.21.0"
  }
}
